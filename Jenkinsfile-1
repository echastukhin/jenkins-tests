pipeline {
  agent none
  stages {
    stage('input') {
      agent any

      input {
        message "What is your first name?"
        ok "Submit"
        parameters {
          string(defaultValue: 'Dave', name: 'FIRST_NAME', trim: true) 
          choice choices: ['перв', 'втор'], name: 'выбор', choiceType: 'PT_SINGLE_SELECT' 
          string 'стр'
          choice choices: ['one', 'two', 'three'], name: 'test_list'
        }
      }
      steps {
        echo "Good Morning, $FIRST_NAME"
        sh '''
          hostname
        '''
      }
    }
  }
}
